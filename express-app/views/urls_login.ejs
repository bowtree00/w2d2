<!-- views/urls_login.ejs -->

<% if(message) { %>
  <h1><%= message %></h1>
<% } %>

<form method="POST" action="/login">
  <p>
    <label>Email</label>
    <input type="text" name="email" />
  </p>
  <p>
    <label>Password</label>
    <input type="password" name="password" />
  </p>
  <p>
    <input type="submit" name="Login" value="Login"/>
  </p>

</form>